doctype
html(lang='en')
    head
        title alphaNotes
        link(href='/css/bootstrap.css', rel='stylesheet', type='text/css')
        link(href='/css/style.css', rel='stylesheet', type='text/css')
        script(src='/js/jquery-1.11.1.js')
        script(src='/js/bootstrap.js')
    body
        #main.container-fluid
            #hdr Alpha Notes
            form(method='POST', action='/addnote')
                #noteinput.row
                    #noteinputcol.col-md-8.text-center
                        textarea(name='noteentry', id='noteentry', placeholder='Enter note here...', autofocus)
                    #noteinputcol2.col-md-4.pull-right
                        input(type='submit', value='Add Note')



